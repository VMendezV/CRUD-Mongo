{{#if tasks}}
<table class="table table-bordered table-hover table-dark">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Moneda</th>
      <th scope="col">Cantidad</th>
      <th scope="col">Precio De Cambio</th>
      <th scope="col">Total</th>
      <th scope="col">Dolares/Euros</th>
      <th scope="col">Operaciones</th>
    </tr>
  </thead>
  <tbody>
    {{#each tasks}}
    {{#pesodolar cantidad}}{{/pesodolar}}
    {{#pesoeuro cantidad}}{{/pesoeuro}}
    <tr>
      <th>{{@index}}</th>
      <td><strong>MXN</strong></td>
      <td><strong>{{cantidad}}</strong></td>
      {{#if done}}
      <td><strong>0.05 c/u</strong></td>
      <td><strong>{{#totaldolar}}{{/totaldolar}}</strong></td>
      {{else}}
      <td><strong>0.045 c/u</strong></td>
      <td><strong>{{#totaleuro}}{{/totaleuro}}</strong></td>
      {{/if}}
      <td>
        {{#if done}} {{!apertura del if}}
        <a class="btn btn-success" href="/tasks/{{_id}}/toggleDone">DOOLARES</a>
        {{else}}
        <a class="btn btn-secondary" href="/tasks/{{_id}}/toggleDone">EUROS</a>
        {{/if}} {{!cierre del if}}
      </td>
      <td>
        <a class="btn btn-danger" href="/tasks/{{_id}}/delete">Delete</a>
        <a class="btn btn-info" href="/tasks/{{_id}}/edit">Edit</a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
{{else}}
<div>
  <div>
    <h1>No tasks</h1>
    <svg xmlns="http://www.w3.org/2000/svg" width="26" height="26" fill="currentColor" class="bi bi-clipboard-check-fill" viewBox="0 0 16 16">
      <path d="M6.5 0A1.5 1.5 0 0 0 5 1.5v1A1.5 1.5 0 0 0 6.5 4h3A1.5 1.5 0 0 0 11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3Zm3 1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-3a.5.5 0 0 1-.5-.5v-1a.5.5 0 0 1 .5-.5h3Z"/>
      <path d="M4 1.5H3a2 2 0 0 0-2 2V14a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V3.5a2 2 0 0 0-2-2h-1v1A2.5 2.5 0 0 1 9.5 5h-3A2.5 2.5 0 0 1 4 2.5v-1Zm6.854 7.354-3 3a.5.5 0 0 1-.708 0l-1.5-1.5a.5.5 0 0 1 .708-.708L7.5 10.793l2.646-2.647a.5.5 0 0 1 .708.708Z"/>
    </svg>
  </div>
</div>
{{/if}}